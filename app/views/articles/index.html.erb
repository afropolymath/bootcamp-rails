<h1>Listing articles</h1>
<%= link_to 'New article', new_article_path %>
<% if @articles.count > 0 %>
	<ul>
	<% @articles.each do |article| %>
		<li><%= article.title %> <%= link_to 'Show', article_path(article) %> <%= link_to 'Edit', edit_article_path(article) %> <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure' } %></li>
	<% end %>
	</ul>
<% else %>
<p>No articles here yet</p>
<% end %>